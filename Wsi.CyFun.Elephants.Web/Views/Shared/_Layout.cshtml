@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAdmin = HttpContextAccessor.HttpContext?.Session.GetString("IsAdmin") == "true";
    var isAssessor = HttpContextAccessor.HttpContext?.Session.GetString("IsAssessor") == "true";
    var isLoggedIn = (HttpContextAccessor.HttpContext?.Session.GetString("UserId") != null);
    var isUser = isLoggedIn && !isAdmin && !isAssessor;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Wsi.CyFun.Elephants.Web</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/Wsi.CyFun.Elephants.Web.styles.css" rel="stylesheet" asp-append-version="true" />

    <style>
        :root {
            --primary-darkblue: #003366;
            --primary-blue: #3366cc;
            --light-bg: #f8f9fa;
            --light-text: #1a1a1a;
            --light-green: #39e75f;
        }

        body {
            font-family: "Source Code Pro";
            background-color: var(--light-bg);
            color: var(--light-text);
            top: 0 !important;
        }

        .navbar {
            background-color: var(--primary-darkblue);
            border-bottom: 3px solid var(--primary-blue);
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.4rem;
            transition: color 0.2s ease-in-out;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='white' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        .nav-item {
            margin-right: 20px;
            margin-left: 20px;
        }

        main {
            background-color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
            margin-bottom: 2rem;
        }

        footer {
            background-color: var(--primary-darkblue);
            color: #eee;
            border-top: 2px solid var(--primary-blue);
            padding: 1rem 0;
        }

            footer a {
                color: var(--primary-blue);
            }

        a {
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <div class="d-none d-lg-block" style="width: 5%;"></div>
                    @if (isLoggedIn)
                    {
                        @* Admin navigatie *@
                        if (isAdmin)
                        {
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-exclamation-diamond"></i> ADMIN DASHBOARD
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-text-indent-left"></i> BEHEER VRAGENLIJST
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Functions">
                                                <i class="bi bi-terminal"></i> FUNCTIES
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Categories">
                                                <i class="bi bi-tag"></i> CATEGORIEËN
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Subcategories">
                                            <i class="bi bi-tags"></i> SUBCATEGORIEËN
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Requirements">
                                                <i class="bi bi-folder-check"></i> VEREISTEN
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Guidances">
                                                <i class="bi bi-chat-left-dots"></i> RICHTLIJNEN
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-people"></i> BEHEER GEBRUIKERS
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="User" asp-action="Index">
                                                <i class="bi bi-person-lines-fill"></i> GEBRUIKERSLIJST
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="User" asp-action="Create">
                                                <i class="bi bi-person-plus"></i> NIEUWE GEBRUIKER
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        }
                        @* Assessor navigatie *@
                        else if (isAssessor)
                        {
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Assessor" asp-action="Index">
                                        <i class="bi bi-clipboard-check"></i> EVALUATIE DASHBOARD
                                    </a>
                                </li>
                            </ul>
                        }
                        @* User navigatie *@
                        else if (isUser)
                        {
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-house-door"></i> START
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Survey" asp-action="Index">
                                        <i class="bi bi-ui-checks"></i> VRAGENLIJST
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Maturity" asp-action="Index">
                                        <i class="bi bi-card-list"></i> SCORELIJST
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Assessment" asp-action="AssessmentOverview">
                                        <i class="bi bi-card-list"></i> OVERZICHT VRAGENLIJSTEN
                                    </a>
                                </li>
                            </ul>
                        }
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Logout" asp-action="Index">
                                    <i class="bi bi-box-arrow-right"></i> Uitloggen
                                </a>
                            </li>
                        </ul>
                    }
                    else
                    {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Login" asp-action="Index">
                                <i class="bi bi-box-arrow-in-right"></i> Inloggen
                            </a>
                        </li>
                    </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
