@model RequirementsViewModel
@{
    ViewData["Title"] = "Vereiste verwijderen";
}

<h2>VEREISTE VERWIJDEREN</h2>
<div class="alert alert-warning">
    Weet je zeker dat je <strong>@Model.Name</strong> wilt verwijderen?
</div>
<form asp-action="DeleteRequirementConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">VERWIJDEREN</button>
    <a asp-action="Requirements" class="btn btn-secondary">ANNULEREN</a>
</form>