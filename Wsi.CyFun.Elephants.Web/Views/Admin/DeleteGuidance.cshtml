@model GuidanceViewModel
@{
    ViewData["Title"] = "Richtlijnen verwijderen";
}

<h2>RICHTLIJN VERWIJDEREN</h2>
<div class="alert alert-warning">
    Weet je zeker dat je <strong>@Model.Name</strong> wilt verwijderen?
</div>
<form asp-action="DeleteGuidanceConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">VERWIJDEREN</button>
    <a asp-action="Guidances" class="btn btn-secondary">ANNULEREN</a>
</form>