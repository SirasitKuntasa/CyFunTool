@model FunctionIndexViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Function";
}

<h1>Fill in the tool</h1>
@foreach (var function in Model.Functions)
{
    <div class="col-md-4">
        <div class="card mb-3" style="max-width: 500px">
            <div class="row no-gutters">
                <div class="col-md-4">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@function.Name</h5>
                        <a class="btn btn-secondary" asp-controller="Survey" asp-action="ShowSurvey" asp-route-id="@function.Id">Select</a>
                    </div>
                </div>
    
            </div>
        </div>
    </div>
}