@model Wsi.CyFun.Elephants.Web.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Gebruiker verwijderen";
}

<h2>GEBRUIKER VERWIJDEREN</h2>
<div class="alert alert-warning">
    Weet je zeker dat je <strong>@Model.Username</strong> wilt verwijderen?
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">VERWIJDEREN</button>
    <a asp-action="Index" class="btn btn-secondary">ANNULEREN</a>
</form>